@model FornecedorModel
@{
    ViewData["Title"] = "Apagar Fornecedor";
}

<div class="text-center">

    <h3>Deseja realmente apagar o registro (@Model.Empresa)?</h3>
</div>

<a class="btn btn-danger" role="button" asp-controller="Fornecedores" asp-action="Apagar" asp-route-id="@Model.id">Confirmar exclusão</a>
<a class="btn btn-primary" role="button" asp-controller="Fornecedores" asp-action="Index">Cancelar exclusão</a>