@model ProdutoModel
@{
    ViewData["Title"] = "Apagar Produto";
}

<div class="text-center">

    <h3>Deseja realmente apagar o registro (@Model.Produto)?</h3>
</div>

<a class="btn btn-danger" role="button" asp-controller="Produto" asp-action="Apagar" asp-route-id="@Model.Id">Confirmar exclusão</a>
<a class="btn btn-primary" role="button" asp-controller="Produto" asp-action="Index">Cancelar exclusão</a>