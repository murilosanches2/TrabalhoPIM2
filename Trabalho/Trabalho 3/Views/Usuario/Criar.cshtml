@using Trabalho_3.Enums
@model UsuarioModel
@{
    ViewData["Title"] = "Criar usuário";
}
<title>Adicionar Usuário</title>
<div class="text-center">

    <h1 class="display-4">Cadastrar Usuário</h1>

</div>

<form asp-controller="Usuario" asp-action="Criar" method="post">

    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite aqui o Nome" />
        @Html.ValidationMessageFor(X => X.Nome)
    </div>

    <div class="form-group">
        <label for="Email">Email</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite aqui o E-mail">
        @Html.ValidationMessageFor(X => X.Email)
    </div>

    <div class="form-group">
        <label for="Login">Login</label>
        <input type="text" asp-for="Login" class="form-control" placeholder="Digite aqui o Login">
        @Html.ValidationMessageFor(X => X.Login)
    </div>

    <div class="form-group">
        <label for="Login">Perfil</label>
        <select asp-for="Perfil" class="form-control">
            <option value="0">Selecione</option>
            <option value="@PerfilEnum.Admin">Administrador</option>
            <option value="@PerfilEnum.Padrao">Padrão</option>
        </select>
        @Html.ValidationMessageFor(X => X.Perfil)
    </div>

    <div class="form-group">
        <label for="Login">Senha</label>
        <input type="password" asp-for="Senha" class="form-control" placeholder="Digite aqui a Senha">
        @Html.ValidationMessageFor(X => X.Senha)
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Confirmar</button>
    <a class="btn btn-secondary btn-block" asp-controller="Usuario" asp-action="Index" role="button">Voltar</a>
</form>